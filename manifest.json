{
  "name" : "Simple Youtube Downloader",
  "description" : "Download Youtube videos easier than ever before",
  "version": "1.0",
  "author": "Ritvik Rastogi",
  "manifest_version": 2,
  "web_accessible_resources": ["src/youtubedl.js"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/loader.js"],
      "css" : ["src/style.css"]
    }
  ]
}
